<h1>Edit Records</h1>

<div class="card card-body">
    <form action="/records/recordedit/{{record.id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="id">ID</label>
			<input type='hidden' name="_method" value="PUT">
            <input type="text" name="id" class='form-control' value='{{record.id}}' required>
        </div>
        <div class="form-group">
            <label for="user">Username</label>
			<input type='hidden' name="_method" value="PUT">
            <input type="text" name="user" class='form-control' value='{{record.user}}' required>
        </div>
        <div class="form-group">
            <label for="time">Reaction Time</label>
            <input type="text" name="time" class='form-control' value='{{record.time}}' required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>